entryPoints:
  web:
    address: :80
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: :443
    http:
      tls:
        certresolver: hostingde
        domains:
          - main: {{ local_domain }}
            sans: "*.{{ local_domain }}"
  traefik:
    address: ":8080"

ping: {}

providers:
  docker:
    endpoint: unix:///var/run/docker.sock
    watch: true
    exposedByDefault: {{ traefik_exposed_by_default }}
{% if traefik_file_provider %}
  file:
    filename: /etc/traefik/rules.yaml
{% endif %}

api:
  insecure: false
{% if traefik_enable_dashboard %}
  dashboard: true
{% endif %}

log:
  level: debug

certificatesResolvers:
  hostingde:
    acme:
      email: {{ letsencrypt_email }}
      storage: /etc/traefik/acme.json
      dnsChallenge:
        provider: hostingde
        delayBeforeCheck: 0
        resolvers:
          # - 2620:fe::fe:53
          # - 2620:fe::9:53
          - 9.9.9.9:53
          - 149.112.112.112:53

{% if traefik_insecure_transport %}
serversTransport:
  insecureSkipVerify: true
{% endif %}
