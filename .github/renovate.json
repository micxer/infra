{
  "extends": [
    "config:recommended"
  ],
  "ansible": {
    "enabled": true
  },
  "regex": {
    "enabled": true
  },
  "regexManagers": [
    {
      "fileMatch": [
        "host_vars/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s+.*?_version: (?<currentValue>.*)$"
      ],
      "datasourceTemplate": "{{datasource}}",
      "depNameTemplate": "{{depName}}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "ansible-galaxy"
      ],
      "matchFileNames": [
        "requirements.yml"
      ],
      "automerge": true,
      "automergeType": "pr",
      "prPriority": 1,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchManagers": [
        "regex"
      ],
      "matchFileNames": [
        "host_vars/memoryalpha"
      ],
      "automerge": true,
      "automergeType": "pr",
      "prPriority": 2
    }
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5
}
