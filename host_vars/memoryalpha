    devices:
      - ata-WDC_WD120EDBZ-11B1HA0_5QGZGB4F
      - ata-WDC_WD120EDBZ-11B1HA0_5QGZWKGF
    type: mirror
    atime: off
    compression: lz4
    xattr: sa
    acltype: posixacl
    options:
      - "-o ashift=12"
      - "-m /mnt/storage"
    state: present

zfs_create_filesystems: true
